<html>
<head>
  <title>Taras Shevchenko School of Ukrainian Studies</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <!-- <label id="code.slt"/>  -->
  <%= javascript_include_tag :defaults %>
<!-- END:stylesheet -->
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %> 
    <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <% hidden_div_if(@cart.items.empty?, :id => "cart") do %>
          <%= render(:partial => "cart", :object => @cart) %>
        <% end %>
      <% end %>
      <a href="http://www....">Home</a><br />
      <a href="http://www..../faq">Questions</a><br />
      <a href="http://www..../news">News</a><br />
      <a href="http://www..../contact">Contact</a><br />
      
      <% if session[:user_id] %>
        <br />
        <%= link_to 'Orders', :controller => 'admin', :action => "index" %> <br />
        <%= link_to 'User Account Listing', :controller => 'users' %> <br />
        <%= link_to 'Student Listing', :controller => 'students' %> <br />
        <br />
        <%= link_to 'Logout', :controller => 'admin', :action => "logout" %> <br />
      <% end %>
      
    </div>
    <div id="main">
      <% if flash[:notice] %>
        <div id="notice"><%= flash[:notice]%></div>
      <%end%>
        
      <%= yield :layout %><!-- <label id="code.depot.e.include"/> -->
    </div>
  </div>
</body>
</html>

